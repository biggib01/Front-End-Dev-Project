<section class="section-products">
    <div class="container">
            <div class="row justify-content-center text-center">
                    <div class="col-md-8 col-lg-6">
                            <div class="header">
                                    <h2><u>Order List</u></h2>
                            </div>
                    </div>
            </div>
            <div class="row">
                <% if(orderss != '') {%>
                        <% orderss.forEach(function (category, index) {%> 
                                <!-- Single Product -->
                                <div class="col-md-6 col-lg-4 col-xl-3" id="product" style="border: 0.5px solid red;
                                                                                            border-radius: 5px;
                                                                                            border-color: #444444;">
                                        <div id="product-1" class="single-product">
                                            <div class="part-1" style="background-image: url('https://fs.hut1150.com/pizzas/veggie-18112020104836.jpg');background-size: 140%;background-repeat: no-repeat;">
                                            </div>
                                            <div class="part-2">
                                                <h3 class="product-title" id="name">Table: <%- category.tableID %> </h3>
                                                <h3 class="product-title" id="name"><%- category.order %> </h3>
                                                <h4 class="product-price" id="price"><%- category.price %> Baht.</h4>
                                                <br>
                                                <h4 class="product-price" id="price">Status: <strong><%- category.status %></strong></h4>
                                            </div>
                                        </div>
                                </div>
                        <% }) %> 
                <% } %> 
            </div>
    </div>
</section>
